% planet(Name, Distance from Sun in million km, Type)
planet(mercury, 58, terrestrial).
planet(venus, 108, terrestrial).
planet(earth, 150, terrestrial).
planet(mars, 228, terrestrial).
planet(jupiter, 778, gas_giant).
planet(saturn, 1430, gas_giant).
planet(uranus, 2870, ice_giant).
planet(neptune, 4490, ice_giant).

% Rule to get only planets closer than 200 million km
close_planet(Name, Distance, Type) :-
    planet(Name, Distance, Type),
    Distance < 200.

% Initialization
:- initialization(main).

main :-
    write('Planets with distance < 200 million km from Sun:'), nl, nl,
    close_planet(Name, Distance, Type),
    write('Name: '), write(Name), nl,
    write('Distance: '), write(Distance), write(' million km'), nl,
    write('Type: '), write(Type), nl, nl,
    fail.  % force backtracking to find all matches

main :- halt.  % this will be tried after all solutions are exhausted
