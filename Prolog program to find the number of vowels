% Define vowels
is_vowel(a).
is_vowel(e).
is_vowel(i).
is_vowel(o).
is_vowel(u).

% Count vowels in a list of characters
count_vowels([], 0).
count_vowels([H|T], Count) :-
    is_vowel(H),
    count_vowels(T, Rest),
    Count is Rest + 1.
count_vowels([H|T], Count) :-
    \+ is_vowel(H),
    count_vowels(T, Count).

% Start execution
:- initialization(main).

main :-
    write('Enter a word in single quotes (e.g., \'hello\'): '),
    read(Word),
    atom_chars(Word, CharList),
    count_vowels(CharList, VowelCount),
    write('Number of vowels: '), write(VowelCount), nl.
